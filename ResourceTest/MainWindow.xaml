<Window x:Class="ResourceTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:me="clr-namespace:ResourceTest"
				xmlns:res="clr-namespace:StylesAndResources;assembly=StylesAndResources"
        mc:Ignorable="d"
        Title="MainWindow" Width="600" Height="400">
	<Window.Resources>
		<ImageBrush x:Key="cat" Stretch="UniformToFill" ImageSource="images/katze.jpg" />
		<ImageBrush x:Key="coast" Stretch="UniformToFill" ImageSource="images/küste.jpg" />
		<ImageBrush x:Key="waterfall" Stretch="UniformToFill" ImageSource="pack://application:,,,/StylesAndResources;component/img/img2/waterfall.jpg"/>
	</Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Background="{DynamicResource {ComponentResourceKey TypeInTargetAssembly={x:Type res:DummyForSharingResources}, ResourceId=TestBg}}"></StackPanel>
		<Border Grid.Row="1" BorderBrush="Gray" BorderThickness="2" Background="{StaticResource waterfall}"></Border>
		<Button Grid.Row="2" ></Button>
		<TextBox Grid.Row="3"></TextBox>
	</Grid>
</Window>
